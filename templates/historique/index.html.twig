{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}
{% block title %}GSB{% endblock %}

{% block body %}
<form action="{{path('historique')}}" method="post">
<h3> Voici vos fiche de frais cloturer en foction de l'annee </h3> 
<input type="number" name="annee" min="1900" max="2999" step="1" value="2020" />

<button type="submit" class="btn btn-primary" name="btnSubmit" value="envoyer">Valider</button><br>
 </form>

<div class="example-wrapper">
    <center>
   <div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
        <table class=" tabel table-striped">
        <tr>
                
                
                <td> Date</td>
                <td> Statue</td>
                <td> Detail</td>
                
            </tr>
        {% for laficheA in listeFicheA %}
            <tr>
                
                
                <td> {{laficheA.date|date("d/m/Y")}}</td>
                <td> {{laficheA.idEtat.etatActuel}}</td>
                <td> <a href={{path('detail',{'idfiche':laficheA.idFiche})}}>detail </a></td>
            </tr>
        {% endfor %}
        </table>
    </div>
    </center>
</div>

<h3> Voici toute vos fiche de frais </h3> 
<div class="example-wrapper">
    <center>
   <div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
        <table class=" tabel table-striped">
        <tr>
                
                
                <td> Date</td>
                <td> Statue</td>
                <td> Detail</td>
                
            </tr>
        {% for lafiche in listeFiche %}
            <tr>
                
                
                <td> {{lafiche.date|date("d/m/Y")}}</td>
                <td> {{lafiche.idEtat.etatActuel}}</td>
                <td> <a href={{path('detail',{'idfiche':lafiche.idFiche})}}>detail </a></td>
            </tr>
        {% endfor %}
        </table>
    </div>
    </center>
</div>
{% endblock %}
